package com.tavant.collection;

import java.io.Console;
import java.util.Scanner;

import com.tavant.collection.models.Employee;
import com.tavant.collection.service.EmployeeService;
import com.tavant.collection.service.EmployeeServiceImpl;

import jdk.internal.agent.resources.agent;

public class Main {
	public static void main(String[] args) {
		
		EmployeeService employeeService = new EmployeeServiceImpl();
		
		
		for(int i = 0 ; i < 5 ; i ++) {
			Employee employee = new Employee();
			employeeService.addEmployee(employee);
		}
		
		
		
		for(Employee q : employeeService.getEmployees()) {
			System.out.println(q);
		}
		
		Scanner scanner = new Scanner(System.in);
		boolean again = false;
		do {
			
			showOptions();
			String input = scanner.nextLine();
			switch (input) {
			case "1":
				System.out.println("1");
				break;

			default:
				System.out.println("Invalid Input");
				again = false;
				break;
			}
			
		}while(again);
	}
	
	public static void showOptions() {
		
		
			System.out.println("Choose Option :");
			System.out.println("1 : Add");
			System.out.println("2 : Delete");
			System.out.println("3 : Update");
			System.out.println("4 : Check Existance By Id");
			
			
	}
}







